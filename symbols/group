    };
    key <LFSH> {
        type[Group1]="PC_ALT_LEVEL2",
        symbols[Group1] = [ Shift_L,                              Shift_L             ],
        actions[Group1] = [ SetMods(modifiers=Shift, clearLocks), LockGroup(group=+1) ]
    };
};

