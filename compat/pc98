// Minimal set of symbol interpretations to provide
// reasonable default behavior (Num lock, Shift lock,
// and Mode switch) and set up the automatic updating
// of common keyboard LEDs.

default xkb_compatibility "basic" {

    interpret.repeat= False;
    setMods.clearLocks= True;
    latchMods.clearLocks= True;
    latchMods.latchToLock= True;

    interpret Shift_Lock {
	action= LockMods(modifiers=Shift);
    };

//    interpret Any+Lock {
//	action= LockMods(modifiers=Lock);
//    };

    interpret Num_Lock {
	action= LockMods(modifiers=Mod2);
    };

    interpret Mode_switch {
	action= SetGroup(group=2,clearLocks);
    };

    interpret Any + Any {
	action= SetMods(modifiers=modMapMods);
    };

    group 2 = Mod5;
    group 3 = Mod5;
    group 4 = Mod5;

    indicator.allowExplicit= False;
    indicator "Caps Lock" {
	whichModState= Locked;
	modifiers= Lock;
    };
    indicator "Num Lock" {
	whichModState= Locked;
	modifiers= Mod2;
    };
    indicator "Shift Lock" {
	whichModState= Locked;
	modifiers= Shift;
    };
    indicator.allowExplicit= True;
};
