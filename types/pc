partial default xkb_types "default" {

    // Some types that are necessary
    // for a full implementation of
    // a PC-compatible keyboard.

    virtual_modifiers Alt,Super;

    type "PC_SUPER_LEVEL2" {
       modifiers = Super;
       map[None] = Level1;
       map[Super] = Level2;
       level_name[Level1] = "Base";
       level_name[Level2] = "Super";
    };

    type "PC_CONTROL_LEVEL2" {
	modifiers = Control;
	map[None] = Level1;
	map[Control] = Level2;
	level_name[Level1] = "Base";
	level_name[Level2] = "Control";
    };

    type "PC_ALT_LEVEL2" {
	modifiers = Alt;
	map[None] = Level1;
	map[Alt] = Level2;
	level_name[Level1] = "Base";
	level_name[Level2] = "Alt";
    };

    type "CTRL+ALT" {
        modifiers = Control+Mod1+Shift+Mod5;
	map[Mod1+Control] = Level5;
	preserve[Control] = Control;
	preserve[Mod1] = Mod1;
	map[Shift] = Level2;
        map[Shift+Control] = Level2;
        map[Shift+Mod1] = Level2;
	map[Shift+Mod1+Control] = Level2;
	preserve[Shift] = Shift;
	preserve[Shift+Control] = Shift+Control;
	preserve[Shift+Mod1] = Shift+Mod1;
	preserve[Shift+Mod1+Control] = Shift+Mod1+Control;
	map[Mod5] = Level3;
        map[Mod5+Control] = Level3;
        map[Mod5+Mod1] = Level3;
	map[Mod5+Mod1+Control] = Level3;
	preserve[Mod5+Control] = Control;
	preserve[Mod5+Mod1] = Mod1;
	preserve[Mod5+Mod1+Control] = Mod1+Control;
	map[Shift+Mod5] = Level4;
        map[Shift+Mod5+Control] = Level4;
        map[Shift+Mod5+Mod1] = Level4;
	map[Shift+Mod5+Mod1+Control] = Level4;
	preserve[Shift+Mod5+Control] = Control;
	preserve[Shift+Mod5+Mod1] = Mod1;
	preserve[Shift+Mod5+Mod1+Control] = Mod1+Control;
	level_name[Level1] = "Base";
        level_name[Level2] = "Shift";
        level_name[Level3] = "Alt Base";
        level_name[Level4] = "Shift Alt";
        level_name[Level5] = "Ctrl+Alt";
    };

   // Local eight level.
   // Needed when you want part of your layout eight-level but cannot use
   // LevelFive as modifier, as this will take over the right Ctrl by default
   // for the whole layout and is too invasive for the average four-level user.
   // Needed to fix bug #9529.
   // FIXME: Should really use RControl but it seems not to be enabled by
   // default and touching this requires a lot of testing.
   type "LOCAL_EIGHT_LEVEL" {
	modifiers = Shift+Lock+Mod5+Control;

	map[None]       = Level1;
	map[Lock+Shift] = Level1;
	map[Shift] = Level2;
	map[Lock]  = Level2;

	map[Mod5]            = Level3;
	map[Lock+Shift+Mod5] = Level3;
	map[Shift+Mod5] = Level4;
	map[Lock+Mod5]  = Level4;

	map[Control]            = Level5;
	map[Lock+Shift+Control] = Level5;
	map[Shift+Control] = Level6;
	map[Lock+Control]  = Level6;

	map[Mod5+Control]            = Level7;
	map[Lock+Shift+Mod5+Control] = Level7;
	map[Shift+Mod5+Control] = Level8;
	map[Lock+Mod5+Control]  = Level8;

	level_name[Level1] = "Base";
	level_name[Level2] = "Shift";
	level_name[Level3] = "Level3";
	level_name[Level4] = "Shift Level3";
	level_name[Level5] = "Ctrl";
	level_name[Level6] = "Shift Ctrl";
	level_name[Level7] = "Level3 Ctrl";
	level_name[Level8] = "Shift Level3 Ctrl";
    };

};
